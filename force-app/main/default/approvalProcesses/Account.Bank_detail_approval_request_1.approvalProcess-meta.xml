<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Bank_Account_Number__c</field>
        <field>Bank_Account_Number_Akahu__c</field>
        <field>Bank_Name__c</field>
        <field>Bank_Provided_Name__c</field>
        <field>Bank_Provided_Name_Akahu__c</field>
        <field>PersonEmail</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jon.foster@tempo.co.nz</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sacha.flynn@tempo.co.nz</name>
                <type>user</type>
            </approver>
            <approver>
                <name>warren.bland@tempo.co.nz</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>User.UserRole</field>
                <operation>notEqual</operation>
                <value>CS Manager</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Submit for Approval</label>
        <name>Submit_for_Approval</name>
    </approvalStep>
    <description>Submits a bank detail change for approval before it is sent to AWS via the Person Detail Change</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>notEqual</operation>
            <value>CS Manager</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>approval_request_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Bank_Account_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_approval_status_to_approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_update_registered</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>verified</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>approval_request_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Bank_account_status_update_fail</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_approval_status_to_denied</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Change_approval_status_to_requested</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Submitter_ID</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_Bank_Account_Status_to_pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Bank detail approval request 1</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
